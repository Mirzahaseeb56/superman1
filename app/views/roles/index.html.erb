
<h1>List of All Roles</h1>
<div class="container mt-5">
    <div class="table-responsive">
        <table class="table">
            <thead class="thead-light">
                <tr>
                    <th scope="col">Role Name</th>
                    <th scope="col">Actions</th>
                </tr>
            </thead>
            <tbody>
            <% @roles.each do |role| %>
                <tr>
                    <td><%= role.name %></td>
                    <td>
                        <div class="d-flex">
                            <%= link_to 'Edit', edit_role_path(role), class: 'btn btn-primary btn-sm mr-2' %>
                            <%= button_to 'Delete', role_path(role), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-sm' %>
                        </div>
                    </td>
                </tr>
            <% end %>
            </tbody>
        </table>
    </div>
</div>
<p><%= link_to 'Create Role', new_role_path, class: 'btn btn-success' %></p>
